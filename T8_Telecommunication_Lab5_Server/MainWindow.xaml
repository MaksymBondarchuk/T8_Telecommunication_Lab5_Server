<Window x:Class="T8_Telecommunication_Lab5_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="502" Width="804">
    <Grid>
        <Button x:Name="ButtonStartServer" Content="Start server" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStartServer_Click" IsEnabled="False"/>
        <TextBox x:Name="TextBoxClients" HorizontalAlignment="Right" Margin="0,10,10,10" TextWrapping="Wrap" Width="242"/>
        <ComboBox x:Name="ComboBoxClient" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="225" DropDownOpened="ComboBoxClient_DropDownOpened"/>
        <TextBox x:Name="TextBoxMatrix" HorizontalAlignment="Left" Margin="10,62,0,10" TextWrapping="Wrap" Width="415" FontFamily="Consolas"/>
        <Button x:Name="ButtonGenerate" Content="Generate Matrix" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="100" Click="ButtonGenerate_Click"/>

    </Grid>
</Window>
